server {
listen 80;
server_name _;

# ----------------------------
# MailHog API (explicit)
# ----------------------------
location ^~ /mailhog/api/ {
add_header X-Debug-Where "mailhog-api" always;
add_header X-Debug-Uri $request_uri always;

# strip /mailhog prefix so MailHog sees /api/...
rewrite ^/mailhog/(.*)$ /$1 break;

proxy_pass http://127.0.0.1:18025;
proxy_set_header Host $host;
proxy_set_header X-Real-IP $remote_addr;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header X-Forwarded-Proto $scheme;

proxy_http_version 1.1;
proxy_buffering off;
}

# ----------------------------
# MailHog UI
# ----------------------------
location ^~ /mailhog/ {
add_header X-Debug-Where "mailhog-ui" always;
add_header X-Debug-Uri $request_uri always;

# strip /mailhog prefix so MailHog sees /
rewrite ^/mailhog/(.*)$ /$1 break;

proxy_pass http://127.0.0.1:18025;
proxy_set_header Host $host;
proxy_set_header X-Real-IP $remote_addr;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header X-Forwarded-Proto $scheme;

proxy_http_version 1.1;
proxy_buffering off;
}

# ----------------------------
# Main app
# ----------------------------
location / {
add_header X-Debug-Where "main-app" always;

proxy_pass http://127.0.0.1:80;
proxy_set_header Host $host;
proxy_set_header X-Real-IP $remote_addr;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header X-Forwarded-Proto $scheme;
}
}
