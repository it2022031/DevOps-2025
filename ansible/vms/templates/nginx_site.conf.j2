server {
listen {{ listen_port }};
# Catch-all (πιάνει οποιοδήποτε Host)
server_name _;
# Μέγιστο μέγεθος request (uploads κτλ)
client_max_body_size {{ client_max_body_size }};

location / {
# Proxy προς το upstream
proxy_pass http://{{ upstream_host }}:{{ upstream_port }};
proxy_http_version 1.1;

# Βασικά headers για σωστό reverse proxy behavior
proxy_set_header Host $host;
proxy_set_header X-Real-IP $remote_addr;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header X-Forwarded-Proto $scheme;

# Headers για WebSocket upgrade (αν χρειαστεί)
proxy_set_header Upgrade $http_upgrade;
proxy_set_header Connection "upgrade";
}

{% if enable_api_proxy %}
    # Αν το enable_api_proxy=true, τότε φτιάχνουμε route π.χ. /api/ προς backend
    location {{ api_prefix }} {
    proxy_pass http://{{ api_upstream_host }}:{{ api_upstream_port }};
    proxy_http_version 1.1;

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # proxy_set_header Origin "";
    }
{% endif %}
}
