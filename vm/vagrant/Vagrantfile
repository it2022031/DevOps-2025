Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2204"
  config.vm.boot_timeout = 600

  # Shared folder (project root -> /vagrant)
  config.vm.synced_folder ".", "/vagrant", type: "virtualbox"

  # Common VM resources
  def vb_defaults(vb)
    vb.memory = 2048
    vb.cpus = 2
  end

  # Όλα τα VM στο ίδιο internal network
  INTNET_NAME = "dsnet"

  # -------- backend --------
  config.vm.define "backend" do |h|
    h.vm.hostname = "backend"

    # Internal network (VM ↔ VM only)
    h.vm.network "private_network",
      ip: "192.168.56.101",
      virtualbox__intnet: INTNET_NAME

    h.vm.provider "virtualbox" do |vb|
      vb_defaults(vb)
    end
  end

  # -------- db --------
  config.vm.define "db" do |h|
    h.vm.hostname = "db"

    h.vm.network "private_network",
      ip: "192.168.56.102",
      virtualbox__intnet: INTNET_NAME

    h.vm.provider "virtualbox" do |vb|
      vb_defaults(vb)
    end
  end

  # -------- front --------
  config.vm.define "front" do |h|
    h.vm.hostname = "front"

    h.vm.network "private_network",
      ip: "192.168.56.103",
      virtualbox__intnet: INTNET_NAME

    h.vm.provider "virtualbox" do |vb|
      vb_defaults(vb)
    end
  end
end
