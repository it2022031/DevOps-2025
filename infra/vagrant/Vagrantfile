Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2204"
  config.vm.boot_timeout = 600

  config.vm.synced_folder File.expand_path("../..", __dir__), "/vagrant", type: "virtualbox"

  def vb_defaults(vb)
    vb.memory = 2048
    vb.cpus = 2
  end

  # -------- backend --------
  config.vm.define "backend" do |h|
    h.vm.hostname = "backend"

    # Host-only network (vboxnet0 is usually 192.168.56.1/24 on the host)
    h.vm.network "private_network",
      ip: "192.168.56.101",
      netmask: "255.255.255.0"

    # Host -> Backend nginx (80)
    # Open on host: http://127.0.0.1:8088
    h.vm.network "forwarded_port", guest: 80, host: 8088, auto_correct: true

    # Host -> MailHog UI (runs on backend VM)
    # Open on host: http://127.0.0.1:8025
    h.vm.network "forwarded_port", guest: 8025, host: 8025, auto_correct: true

    h.vm.provider "virtualbox" do |vb|
      vb_defaults(vb)
    end
  end

  # -------- db --------
  config.vm.define "db" do |h|
    h.vm.hostname = "db"

    h.vm.network "private_network",
      ip: "192.168.56.102",
      netmask: "255.255.255.0"

    h.vm.provider "virtualbox" do |vb|
      vb_defaults(vb)
    end
  end

  # -------- front --------
  config.vm.define "front" do |h|
    h.vm.hostname = "front"

    h.vm.network "private_network",
      ip: "192.168.56.103",
      netmask: "255.255.255.0"

    # Host -> Front nginx (80)
    # Open on host: http://127.0.0.1:8090
    h.vm.network "forwarded_port", guest: 80, host: 8090, auto_correct: true

    h.vm.provider "virtualbox" do |vb|
      vb_defaults(vb)
    end
  end

  # -------- dockerhost --------
  config.vm.define "dockerhost" do |h|
    h.vm.hostname = "dockerhost"

    h.vm.network "private_network",
      ip: "192.168.56.104",
      netmask: "255.255.255.0"

    # Frontend
    h.vm.network "forwarded_port", guest: 8081, host: 8081, auto_correct: true

    # Backend
    h.vm.network "forwarded_port", guest: 8080, host: 8080, auto_correct: true

    # MailHog
    h.vm.network "forwarded_port", guest: 8025, host: 8026, auto_correct: true

    # MinIO Console
    h.vm.network "forwarded_port", guest: 9001, host: 9002, auto_correct: true

    h.vm.provider "virtualbox" do |vb|
      vb_defaults(vb)
    end
  end

  # -------- k8shost --------
  config.vm.define "k8shost" do |h|
    h.vm.hostname = "k8shost"

    h.vm.network "private_network",
      ip: "192.168.56.105",
      netmask: "255.255.255.0"

    # Optional: expose ingress HTTP/HTTPS from the k8s VM to your host
    h.vm.network "forwarded_port", guest: 80, host: 8082, auto_correct: true
    h.vm.network "forwarded_port", guest: 443, host: 8443, auto_correct: true

    # Kubernetes API (microk8s)
    h.vm.network "forwarded_port", guest: 16443, host: 16443, auto_correct: true

    # MailHog UI (k8s port-forward will listen on 18025 inside VM)
    h.vm.network "forwarded_port", guest: 18025, host: 18025, auto_correct: true

    h.vm.provider "virtualbox" do |vb|
      vb.memory = 4096
      vb.cpus = 2
    end
  end

  # -------- jenkins --------
  config.vm.define "jenkins" do |h|
    h.vm.hostname = "jenkins"

    h.vm.network "private_network",
      ip: "192.168.56.106",
      netmask: "255.255.255.0"

    # Jenkins UI
    # Open on host: http://127.0.0.1:8083
    h.vm.network "forwarded_port", guest: 8080, host: 8083, auto_correct: true

    h.vm.provider "virtualbox" do |vb|
      vb.memory = 3072
      vb.cpus = 2
    end
  end
end
